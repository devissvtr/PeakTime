<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PeakTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PeakTime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PeakTime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PeakTime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- tranparent action bar -->

    <style name="Theme.PeakTime.TransparentActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>